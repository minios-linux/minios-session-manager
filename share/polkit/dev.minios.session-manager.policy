<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE policyconfig PUBLIC
 "-//freedesktop//DTD PolicyKit Policy Configuration 1.0//EN"
 "http://www.freedesktop.org/standards/PolicyKit/1/policyconfig.dtd">
<policyconfig>

  <vendor>MiniOS Linux</vendor>
  <vendor_url>https://minios.dev</vendor_url>

  <action id="dev.minios.session-manager.cli">
    <description>Run MiniOS Session Manager CLI operations</description>
    <description xml:lang="de">MiniOS Session Manager CLI-Operationen ausführen</description>
    <description xml:lang="es">Ejecutar operaciones CLI del MiniOS Session Manager</description>
    <description xml:lang="fr">Exécuter les opérations CLI de MiniOS Session Manager</description>
    <description xml:lang="id">Menjalankan operasi CLI MiniOS Session Manager</description>
    <description xml:lang="it">Eseguire operazioni CLI del MiniOS Session Manager</description>
    <description xml:lang="pt">Executar operações CLI do MiniOS Session Manager</description>
    <description xml:lang="pt_BR">Executar operações CLI do MiniOS Session Manager</description>
    <description xml:lang="ru">Выполнить операции MiniOS Session Manager CLI</description>
    <message>Authentication is required to perform session operations</message>
    <message xml:lang="de">Authentifizierung ist erforderlich, um Sitzungs-Operationen durchzuführen</message>
    <message xml:lang="es">Se requiere autenticación para realizar operaciones de sesión</message>
    <message xml:lang="fr">Une authentification est requise pour effectuer des opérations de session</message>
    <message xml:lang="id">Diperlukan otentikasi untuk menjalankan operasi sesi</message>
    <message xml:lang="it">È richiesta l'autenticazione per eseguire operazioni di sessione</message>
    <message xml:lang="pt">É necessária autenticação para executar operações de sessão</message>
    <message xml:lang="pt_BR">É necessária autenticação para executar operações de sessão</message>
    <message xml:lang="ru">Для выполнения операций с сессиями требуется аутентификация</message>
    <defaults>
      <allow_any>auth_admin</allow_any>
      <allow_inactive>auth_admin</allow_inactive>
      <allow_active>auth_admin_keep</allow_active>
    </defaults>
    <annotate key="org.freedesktop.policykit.exec.path">/usr/bin/minios-session</annotate>
    <annotate key="org.freedesktop.policykit.exec.allow_gui">true</annotate>
  </action>

</policyconfig>